//function은 계속 반복해서 사용할 수 있는 코드 조각이라고 생각하면 된다.
//function은 어떤 코드를 캡슐화해서, 실행을 여러 번 할 수 있게 해준다.
function sayHello(nameOfPerson, age){
    console.log("Hello my name is " + nameOfPerson + " and I'm " + age + " years old.");
    //여러가지 이름을 붙이고 싶으면 argument(인수)라는 것을 보내야 한다.
    //argument는 function을 실행하는 동안 어떤 정보를 function에게 보낼 수 있는 방법이다.
}

sayHello("joy", 10);
sayHello("zeu", 5);
sayHello("lil", 20);
