const a = 5;
const b = 2;
let myName = "joy";

console.log(a+b);
console.log(a*b);
console.log(a/b);
console.log("hello "+ myName);

myName = "Joy Yoo";
//앞에 let을 적지 않았는데, let은 새로운 것을 생성할 때 사용하는 것이기 때문.
//한 번 myName이 생겼으면, 업데이트 하고 싶을 때 그냥 업데이트 하면 된다.

console.log("your new name is "+ myName);

//let과의 차이점: const(=constant, 상수) -> 값이 바뀔 수 없다.
//대부분 const를 사용하고, 만약 variable을 업데이트 하고 싶다면 let을 쓴다.
